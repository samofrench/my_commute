<h3>Sign up!</h3>
<div class="row">
	<form class="col s12" method="POST" action="/auth/signup">
		<div class="row">
			<input type="text" name="name" class="col s6" placeholder="Name">
			<label for="name">Name</label>
		</div>
		<div class="row">
			<input type="text" name="email" class="col s6" placeholder="Email">
			<label for="email">Email</label>
		</div>
		<div class="row">
			<input type="password" name="password1" class="col s6" placeholder="Password">
			<label for="password1">Enter a password (min. 8 characters)</label>
		</div>
		<div class="row">
			<input type="password" name="password2" class="col s6" placeholder="Re-Type Your Password">
			<label for="password2">Re-Type Your Password</label>
		</div>
		<div class="row">
			<input type="text" name="address1" class="col s6" placeholder="Address Line 1">
			<label for="address1">Address Line 1</label>
		</div>
		<div class="row">
			<input type="text" name="address2" class="col s6" placeholder="Address Line 2">
			<label for="address2">Address Line 2</label>
		</div>
		<div class="row">
			<input type="text" name="city" class="col s6" placeholder="City">
			<label for="city">City</label>
		</div>
		<div class="row">
			<input type="text" name="state" class="col s6" placeholder="State">
			<label for="state">State</label>
		</div>
		<div class="row">
			<input type="text" name="zip" class="col s6" placeholder="ZIP Code">
			<label for="zip">ZIP Code</label>
		</div>
		<button class="btn" type="submit" name="action">Submit
			<i class="material-icons right">send</i>
		</button>
	</form>
</div>